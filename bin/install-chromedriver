#!/bin/sh

gem install webdrivers
CHROMEDRIVER_LOCATION=$(ruby -e 'require "webdrivers/chromedriver"; Webdrivers::Chromedriver.update; puts Webdrivers.install_dir')
CHROMEDRIVER_PATH="$CHROMEDRIVER_LOCATION/chromedriver"

echo
echo "Chomedriver installed to $CHROMEDRIVER_PATH"
echo "You can now run the specs like this:\n"
echo "\tCHROMEDRIVER_PATH=$CHROMEDRIVER_PATH bundle exec rspec\n"
echo "Or export the variable so you donâ€™t need to pass it each time:\n"
echo "\texport CHROMEDRIVER_PATH=$CHROMEDRIVER_PATH"
echo "\tbundle exec rspec\n"

