  <%= f.govuk_radio_divider %>
  <%= f.govuk_radio_button :referee_type, 'character', label: { text: 'Character' }, hint: { text: t("application_form.references.referee_type.hint_text.character") } %>
<% end %>

<%= f.govuk_submit 'Save and continue' %>
