<% content_for :browser_title, 'Add replacement' %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      Add a replacement course
    </h1>

    <%= form_with model: @form, url: candidate_interface_course_choices_add_replacement_path, method: :post do |f| %>
      <%= f.govuk_text_field :course_option_id, label: { text: 'Course option id', size: 'm' } %>
      <%= f.govuk_submit 'Continue' %>
    <% end %>
  </div>
</div>
