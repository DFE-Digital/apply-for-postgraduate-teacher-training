<%= content_for :title, t('page_titles.remove_course_choice') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_replace_course_choice_path(@course_choice.id), 'Back') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('page_titles.remove_course_choice') %></h1>
    <p class="govuk-body">You are removing:</p>
      <%= render(CandidateInterface::CourseOptionReviewComponent.new(course_option: @course_choice.course_option)) %>

      <%= govuk_link_to 'Remove course choice', candidate_interface_cancel_full_course_choice_path(@course_choice.id), class: 'govuk-button' %>
  </div>
</div>
