<% content_for :title, title_with_error_prefix(t('page_titles.which_course'), @pick_course.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_course_choices_provider_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with(
          model: @pick_course,
          url: candidate_interface_course_choices_course_path(provider_id: params[:provider_id], course_choice_id: @course_choice_id),
          id: 'pick-course-form',
        ) do |f| %>

        <%= render partial: 'candidate_interface/course_choices/shared/course_fields', locals: { f: f }  %>

      <%= f.govuk_submit 'Continue' %>
    <% end %>

    <% if FeatureFlag.active?(:hold_courses_open) %>
      <div class="app-status-box app-status-box--sandbox govuk-!-display-none-print">
        <p class="govuk-body">
          <strong class="govuk-tag govuk-phase-banner__content__tag app-environment-tag govuk-tag--purple">Sandbox feature</strong>
        </p>
        <p class="govuk-body">
          All courses are open for applications, even those which are full in real life.
        </p>
      </div>
    <% end %>
  </div>


</div>
