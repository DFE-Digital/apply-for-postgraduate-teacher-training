<% content_for :title, title_with_error_prefix(t('page_titles.qualification_details'), @wizard.errors.any?) %>
<% content_for :before_content, govuk_back_link_to %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @wizard, url: candidate_interface_edit_other_qualification_details_path do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl">Academic and other relevant qualifications</span>
        Edit <%= @wizard.qualification_type_name %> qualification
      </h1>

      <%= render partial: 'form', locals: { f: f, wizard: @wizard, subjects_for_autocomplete: @subjects_for_autocomplete  } %>

      <%= f.govuk_submit t('application_form.other_qualification.base.button') %>
    <% end %>
  </div>
</div>
