<% content_for :title, t('page_titles.referee_cancel') %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_review_referees_path, 'Back') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @reference, url: candidate_interface_cancel_decoupled_reference_path(@reference.id), method: :patch do |f| %>
      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl"><%= @reference.name %></span>
        <%= t('page_titles.references_cancel_request') %>
      </h1>

      <p class='govuk-body'>We’ll tell <%= @reference.name %> that they do not need to give a reference.</p>

      <%= f.submit t('application_form.decoupled_references.sure_cancel_entry'), class: 'govuk-button govuk-button--warning', data: { module: 'govuk-button' } %>

      <p class="govuk-body">
        <%= govuk_link_to 'No - I’ve changed my mind', candidate_interface_decoupled_references_review_path %>
      </p>
    <% end %>
  </div>
</div>
