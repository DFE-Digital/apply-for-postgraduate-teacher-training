<% content_for :title, title_with_error_prefix(t('page_titles.when_did_you_study_for_your_degree'), degree_year_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to(candidate_interface_application_form_path, 'Back to application') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: degree_year_form, url: candidate_interface_degree_year_path do |f| %>
      <h1 class="govuk-heading-xl">
        <%= t('page_titles.when_did_you_study_for_your_degree') %>
      </h1>

      <%= f.govuk_text_field(
        :start_year,
        label: { text: t('application_form.degree.start_year.label'), size: 'm' },
        type: :number,
        hint_text: t('application_form.degree.start_year.hint_text', example_year: (Date.today.year - 3)),
        width: 4
      ) %>

    <%= f.govuk_text_field(
      :award_year,
      label: { text: t('application_form.degree.award_year.label'), size: 'm' },
      type: :number,
      hint_text: t('application_form.degree.award_year.hint_text', example_year: Date.today.year),
      width: 4
    ) %>

      <%= f.govuk_submit t('application_form.degree.base.button') %>

    <% end %>
  </div>
</div>
