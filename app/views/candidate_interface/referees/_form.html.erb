<p class="govuk-body">Contact your referee in advance to check they are:</p>
<ul class="govuk-list govuk-list--bullet">
  <li>happy to give you a reference</li>
  <li>able to submit the reference within a reasonable timeframe</li>
  <li>comfortable submitting a reference online</li>
</ul>

<%= f.govuk_text_field :name, label: { text: t('application_form.referees.name.label'), size: 'm' } %>
<% if HostingEnvironment.sandbox_mode? %>
  <div class="app-status-box app-status-box--sandbox govuk-!-margin-bottom-4">
    <p class="govuk-body">
      <strong class="govuk-tag govuk-phase-banner__content__tag app-environment-tag govuk-tag--purple">
        sandbox feature
      </strong>
    </p>
    <p class="govuk-body govuk-!-margin-bottom-0">
      Enter <code>refbot1@example.com</code> and <code>refbot2@example.com</code> as your referee email addresses to have the references automatically completed
    </p>
  </div>
<% end %>
<%= f.govuk_text_field :email_address, type: 'email', label: { text: t('application_form.referees.email_address.label'), size: 'm' }, hint: { text: t('application_form.referees.email_address.hint_text').first } %>
<% referee_type = @referee.referee_type ? @referee.referee_type : 'academic' %>
<%= f.govuk_text_area :relationship, label: { text: t('application_form.referees.relationship.label'), size: 'm' }, hint: { text: t("application_form.referees.relationship.hint_text.#{referee_type}") }, max_words: 50 %>

<%= f.govuk_submit t('application_form.work_history.complete_form_button') %>
