<% content_for :title, title_with_error_prefix(t('page_titles.edit_job'), @work_experience_form.errors.any?) %>
<% content_for :before_content, govuk_back_link_to %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @work_experience_form, url: candidate_interface_work_history_edit_path do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">
        <span class="govuk-caption-xl"><%= t('page_titles.work_history') %></span>
        <%= t('page_titles.edit_job') %>
      </h1>

      <%= render 'form', f: f %>

      <%= f.govuk_submit t('application_form.complete_form_button') %>
    <% end %>
  </div>
</div>
