<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <fieldset class="govuk-fieldset">
    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">
      <h1 class="govuk-fieldset__heading">
        Sign up
      </h1>
    </legend>

    <%= devise_error_messages! %>

    <div class="govuk-form-group">
      <%= f.label :title, class: "govuk-label" %>
      <%= f.text_field :title, class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :first_name, class: "govuk-label" %>
      <%= f.text_field :first_name, class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :surname, class: "govuk-label" %>
      <%= f.text_field :surname, class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :gender, class: "govuk-label" %>

      <div class="govuk-radios">
        <% Candidate.genders.keys.each do |gender| %>
          <div class="govuk-radios__item">
            <%= f.radio_button :gender, gender, class: "govuk-radios__input" %>
            <%= f.label "gender_#{gender}", gender.humanize, class: "govuk-label govuk-radios__label" %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="govuk-form-group">
      <%= f.label :date_of_birth, class: "govuk-label" %>
      <%= f.date_field :date_of_birth, class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :email, class: "govuk-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :password, class: "govuk-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.label :password_confirmation, class: "govuk-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "govuk-input" %>
    </div>

    <div class="govuk-form-group">
      <%= f.submit "Sign up", class: 'govuk-button' %>
    </div>

  </fieldset>
<% end %>

<%= render "candidates/shared/links" %>
