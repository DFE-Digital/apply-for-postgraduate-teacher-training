<% content_for :browser_title,  t('.page_title')  %>
<% content_for :before_content, govuk_back_link_to(request.referer) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <span class="govuk-caption-l"><%= @application_choice.application_form.full_name %></span>
      <%= t('.title') %>
    </h1>

    <%= render ProviderInterface::InterviewDetailsComponent.new(@wizard) %>

    <%= govuk_link_to t('.confirm'), confirm_provider_interface_application_choice_interviews_path, class: 'govuk-button' %>

    <p class="govuk-body">
      <%= govuk_link_to t('.cancel'), provider_interface_application_choice_path(@application_choice.id), class: 'govuk-link--no-visited-state' %>
    </p>
  </div>
</div>
