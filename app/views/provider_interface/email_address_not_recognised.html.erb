<% content_for :browser_title, t('page_titles.email_address_not_recognised') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">
      <%= t('page_titles.email_address_not_recognised') %>
    </h1>

    <p class="govuk-body">
      You are signed in to DfE Sign-in as
      <span style="white-space: nowrap;">
        <%= @dfe_sign_in_user&.email_address %>.
      </span>
    </p>

    <p class="govuk-body">
      We can’t find a <%= t('service_name.manage') %> account associated with that address.
      Please <%= govuk_link_to 'sign in again', provider_interface_applications_path %>
    using the email address associated with your <%= t('service_name.manage') %> account.
    </p>

    <p class="govuk-body">
      If you are using the correct email address to sign in to <%= t('service_name.manage') %> and you’re still receiving this message, please contact us at
      <%= bat_contact_mail_to %>.
    </p>
  </div>
</div>
