<% content_for :title, 'Add comment' %>
<% content_for :before_content, govuk_back_link_to(support_interface_applications_path) %>

<% if @error %>
  <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
      There is a problem
    </h2>
    <div class="govuk-error-summary__body">
      <ul class="govuk-list govuk-error-summary__list">
        <li>
          <a href="#csv_file"><%= @error %></a>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<%= form_with model: {}, url: support_interface_application_form_comments_path, method: :post do |f| %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-form-group <% if @error %>govuk-form-group--error<% end %>">
        <%= f.govuk_text_field :comment, label: { text: t('application_form.personal_details.last_name.label'), size: 'l' }, hint_text: t('application_form.personal_details.last_name.hint_text') %>
      </div>
      <%= submit_tag('Add comment', class: 'govuk-button') %>
    </div>
  </div>
<% end %>

