<% content_for :title, 'Reasons for rejection' %>

<% content_for :before_content do %>
  <%= render BreadcrumbComponent.new(items: [
    {
      text: 'Performance',
      path: support_interface_performance_path
    },
    {
      text: 'Reasons for rejection'
    }
  ]) %>
<% end %>

<table class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header govuk-!-width-one-half">Rejection reason</th>
      <th class="govuk-table__header govuk-table__header--numeric govuk-!-width-one-quarter">Total</th>
      <th class="govuk-table__header govuk-table__header--numeric govuk-!-width-one-quarter">This month</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
  <% @reasons.each do |reason, top_level_result| %>
    <tr class="govuk-table__row">
      <td class="govuk-table__cell">
        <h2 class="govuk-heading-s govuk-!-margin-bottom-0">
          <%= t("reasons_for_rejection.#{SupportInterface::ReasonsForRejectionController::MAPPING[reason]}.title", default: reason) %>
        </h2>
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        <%= top_level_result.all_time %>
      </td>
      <td class="govuk-table__cell govuk-table__cell--numeric">
        <%= top_level_result.this_month %>
      </td>
    </tr>
    <% top_level_result.sub_reasons.each do |sub_reason, sub_reason_result| %>
      <tr class="govuk-table__row">
        <td class="govuk-table__cell">
          <h2 class="govuk-heading-s govuk-!-margin-bottom-0">
            <span class="govuk-!-font-weight-regular">
              <%= t("reasons_for_rejection.#{SupportInterface::ReasonsForRejectionController::MAPPING[reason]}.title", default: reason) %>:
            </span>
            <%= t("reasons_for_rejection.#{SupportInterface::ReasonsForRejectionController::MAPPING[reason]}.#{sub_reason}", default: sub_reason) %>
          </h2>
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          <%= sub_reason_result.all_time %>
        </td>
        <td class="govuk-table__cell govuk-table__cell--numeric">
          <%= sub_reason_result.this_month %>
        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
