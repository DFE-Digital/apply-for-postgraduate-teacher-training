<% content_for :title, t('page_titles.sign_in') %>
<% content_for :before_content, govuk_back_link_to(support_interface_path) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="app-banner app-banner--warning govuk-!-margin-bottom-7">
      <div class="app-banner__message">
        <h2 class="govuk-heading-m">Temporary login</h2>
        <p>DfE Sign In is is experiencing problems. You need to sign in using your email address.</p>
      </div>
    </div>

    <p class="govuk-body-l">You must sign in to your account to use the support console.</p>

    <%= form_with model: SupportUser.new, url: support_interface_sign_in_by_email_path do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_text_field :email_address, label: { text: 'Email address', size: 'm' }, type: :email, width: 'two-thirds', autocomplete: 'email' %>

      <%= f.submit 'Continue', class: 'govuk-button', 'data-module': 'govuk-button', 'data-prevent-double-click': true %>
    <% end %>
  </div>
</div>
