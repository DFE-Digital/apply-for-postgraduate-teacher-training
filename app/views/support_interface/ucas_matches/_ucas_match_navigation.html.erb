<% content_for :context, 'UCAS match' %>
<% content_for :title, @match.candidate.email_address %>

<% content_for :before_content do %>
  <%= render BreadcrumbComponent.new(items: [
    {
      text: 'Candidates',
      path: support_interface_candidates_path
    },
    {
      text: 'UCAS matches',
      path: support_interface_ucas_matches_path
    },
    {
      text: @match.candidate.email_address,
      path: support_interface_ucas_match_path(@match)
    }
  ].concat(title != 'Details' ? [{ text: title }] : [])) %>
<% end %>

<%= render TabNavigationComponent.new(items: [
  { name: 'Details', url: support_interface_ucas_match_path(@match) },
  { name: 'History', url: support_interface_ucas_match_audit_path(@match) },
]) %>

<h2 class="govuk-visually-hidden"><%= title %></h2>
