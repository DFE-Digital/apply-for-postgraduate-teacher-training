<h2 class="govuk-heading-m"> GDPR GDPR GDPR </h2>
<%= render 'shared/support_user_gdpr_guidance' %>

<% @export_types.each do |id, export| %>
  <section class="app-section app-section--with-top-border">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h2 class="govuk-heading-m"><%= export.fetch(:name) %></h2>
        <p class="govuk-body"><%= export.fetch(:description) %></p>

        <%= govuk_link_to "View export", support_interface_view_export_path(data_export_id: id) %>
      </div>
    </div>
  </section>
<% end %>
