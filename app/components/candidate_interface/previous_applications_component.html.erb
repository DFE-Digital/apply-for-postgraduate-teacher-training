<table class="govuk-table govuk-!-margin-top-6">
  <caption class="govuk-table__caption govuk-heading-m">Unsuccessful applications</caption>
  <tbody class="govuk-table__body">
  <% application_choices.each do |application_choice| %>
    <tr class="govuk-table__row" data-qa="application-choice-<%= application_choice.id %>">
      <td class="govuk-table__cell govuk-!-width-two-thirds">
        <span class="app-course-choice__course-name">
        <%= govuk_link_to candidate_interface_review_previous_application_path(application_choice.application_form.id) do %>
          <%= course_name_and_code_for(application_choice) %>
          <% end %>
        </span>
        <span class="app-course-choice__provider-name govuk-caption-m govuk-!-font-weight-regular">
          <%= provider_name_for(application_choice) %>
        </span>
      </td>
      <td class="govuk-table__cell">
        <%= render CandidateInterface::ApplicationStatusTagComponent.new(application_choice: application_choice) %>
        <% if application_choice.status == 'rejected'%>
          <p class="govuk-body govuk-!-margin-top-1 govuk-!-margin-bottom-0"><%= govuk_link_to 'View feedback', provider_interface_application_choice_feedback_path(application_choice) %></p>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
