<% @application_form.references.each do |referee| %>
  <%= render(SummaryCardComponent, rows: referee_rows(referee), editable: @editable) do %>
    <header class="app-summary-card__header">
      <h<%= @heading_level %> class="app-summary-card__title">
        <%= t('application_form.referees.nth_referee')[referee.ordinal] %>
      </h<%= @heading_level %>>
      <% if @editable %>
        <div class="app-summary-card__actions">
          <%= link_to candidate_interface_destroy_referee_path(referee.id), class: 'govuk-link' do %>
            <%= t('application_form.referees.delete') %>
            <span class="govuk-visually-hidden"> <%= referee.name %></span>
          <% end %>
        </div>
      <% end %>
    </header>
  <% end %>
<% end %>

<% if show_missing_banner? %>
  <%= render(SectionMissingBannerComponent, section: :references, text: t('review_application.references.incomplete', minimum_references: minimum_references)) do %>
     <%= link_to candidate_interface_referees_path, class: 'govuk-link' do %>
       <%= t('review_application.references.link_html') %>
     <% end %>
   <% end %>
<% end %>
